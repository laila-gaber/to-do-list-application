<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottom_navigation"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.example.myapplication.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is to be done?"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"

        />

    <EditText
        android:id="@+id/et_text"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Task Here"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:drawableEnd="@drawable/ic_baseline_mic_24"
        android:drawableRight="@drawable/ic_baseline_mic_24"
        android:background="@drawable/roundshape"
        android:inputType="text"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due date"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:paddingTop="40dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/et_date"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date not set"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:drawableEnd="@drawable/ic_baseline_date_range_24"
        android:drawableRight="@drawable/ic_baseline_date_range_24"
        android:background="@drawable/roundshape"
        android:inputType="date"/>






    <TextView
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="notifications"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp" />



    <TextView
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No notification if date not set"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:textColor="@color/black"
        android:background="@drawable/roundshape"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:onClick="done"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemBackground="@color/black"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/teal"
        app:menu="@menu/menu_navigation"
        android:layout_marginTop="350dp"

        />


</LinearLayout>
